<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-Vindo!"
        android:id="@+id/bemvindoTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="42sp"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/entradaEditText"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:hint="salve"
        app:layout_constraintTop_toBottomOf="@id/bemvindoTextView"
        android:layout_marginTop="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/entradaEditText"
        android:id="@+id/botaoButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:text="Ganhar um Salve"
        android:textSize="18dp"
        android:backgroundTint="@color/black"
        />


</androidx.constraintlayout.widget.ConstraintLayout>